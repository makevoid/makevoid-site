:ruby
  url   = "https://github.com/makevoid/#{repo.name}"
  stars = repo.stars_count

.repo-card.mb-6
  .bg-white.border.border-gray-200.rounded-lg.overflow-hidden.transition-shadow.hover:shadow-md
    - if repo.image_exists?
      .h-32.overflow-hidden.border-b.border-gray-100
        %img.w-full.h-full.object-cover{ alt: "Repository Screenshot", src: repo.screenshot_url }/
    .p-6
      %h3.text-lg.font-medium.text-gray-900.mb-3
        %a.hover:text-blue-600.transition-colors{href: url}= prettify_title repo.name
      %p.text-gray-600.text-sm.mb-4.leading-relaxed
        = repo.description
      .flex.flex-wrap.gap-2.mb-4
        - repo.repository_topics_all.each do |topic|
          %span.px-2.py-1.bg-blue-50.text-blue-700.text-xs.rounded-md.border.border-blue-200= topic.name
        - repo.languages.edges.map(&:node).each do |lang|
          %span.px-2.py-1.bg-gray-50.text-gray-700.text-xs.rounded-md.border.border-gray-200= lang.name
      - if stars > 1
        .pt-4.border-t.border-gray-100
          .flex.items-center.text-gray-600.text-sm
            %span.mr-1 ⭐
            %span= stars
